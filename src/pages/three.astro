  h1 {
    color: var(--teal-10);
    font-size: var(--font-size-fluid-3);
  }
  h2 {
    font-weight: 500;
    font-size: var(--font-size-fluid-2);
  }
  p {
    margin-top: var(--space-s);
    max-width: var(--paragraph-max-width);
    color: var(--gray-11);
    font-size: var(--step-0);
    text-wrap: pretty;
  }
  .lede {
    font-weight: 600;
    font-size: var(--step-1);
  }
  .primary {
    background: var(--teal-1);
  }
  .secondary {
    background: var(--lime-2);
  }
  .tertiary {
    background: var(--teal-4);
  }
  .quaternary {
    background-image: linear-gradient(
      to top in oklch,
      oklch(58% 0.5 340) 5% 5%,
      75%,
      oklch(90% 0.5 10) 100% 100%
    );
    color: var(--stone-0);
    p {
      color: var(--stone-0);
    }
  }
  .page {
    display: grid;
    align-content: center;
    background: var(--lime-2);
    height: 100vh;
    text-align: center;
  }
  .wrapper {
    margin-inline: auto;
    padding-inline: var(--wrapper-padding-inline);
    max-width: var(--wrapper-max-width);
  }
  .txt-center {
    display: inline-block;
    margin-inline: auto;
    text-align: center;
  }
  img {
    border: 0;
    border-radius: calc(var(--size-fluid-4) * 2);
    padding: var(--size-fluid-4);
    overflow: hidden;
  }
  .fade-left,
  .fade-right,
  .fade-up {
    opacity: 0;
  }
</style>
<script src="@scripts/image-sizes.ts"></script>
<script>
  import { animate, inView, easeInOut } from 'motion';

  function initAnimations() {
    inView('.fade-left', (element) => {
      animate(
        element,
        { opacity: [0, 1], x: [-250, 0] },
        {
          ease: [0.39, 0.24, 0.3, 1],
          duration: 1,
        },
      );
    });
    inView('.fade-right', (element) => {
      animate(
        element,
        { opacity: [0, 1], x: [250, 0] },
        {
          ease: [0.39, 0.24, 0.3, 1],
          duration: 1,
        },
      );
    });
    inView('.fade-up', (element) => {
      animate(
        element,
        { opacity: [0, 1], y: [250, 0] },
        {
          ease: easeInOut,
          duration: 0.5,
          delay: 0.2,
        },
      );
    });
  }
  // Initialize on load
  initAnimations();

  // Reinitialize after Astro transitions
  document.addEventListener('astro:page-load', initAnimations);
  document.addEventListener('astro:after-swap', initAnimations);
</script>
